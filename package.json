{
  "name": "supavec",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo build --filter=@supavec/api",
    "start:api": "turbo run start --filter=@supavec/api",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.3",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3"
  },
  "packageManager": "bun@1.0.30",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
